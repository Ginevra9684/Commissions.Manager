@page
@using Commissions.Manager.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Commissions.Manager.Web.Pages.Commissions.CreateModalModel
@inject IStringLocalizer<ManagerResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Commission" asp-page="/Commissions/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCommission"].Value"></abp-modal-header>
        <abp-modal-body>
            <div class="mb-3">
                <label class="form-label" for="Commission_CustomerId">@L["Customer"]</label>
                <select class="form-select" id="Commission_CustomerId" name="Commission.CustomerId">
                    <option value="">@L["PickACustomer"]</option>
                    @foreach (var customer in Model.Customers)
                    {
                        <option value="@customer.Id">@customer.Name</option>
                    }
                </select>
            </div>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>