@page
@using Commissions.Manager.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Commissions.Manager.Web.Pages.Commissions.EditModalModel
@inject IStringLocalizer<ManagerResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Commission" asp-page="/Commissions/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Edit"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content />
            <abp-select asp-for="Commission.CustomerId" 
                       asp-items="@(new SelectList(Model.Customers, "Id", "Name"))"
                       label="@L["Customer"].Value"
                       data-field-name="customerId" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>